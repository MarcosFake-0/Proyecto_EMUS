@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de sesión";
}

<div class="row d-flex align-items-center justify-content-center vh-100">
    <div class="col-6">
        <div class="border p-3 mt-4 row d-flex justify-content-center">
            <h1 class="text-primary fw-bolder text-uppercase fs-3 text-center">@ViewData["Title"]</h1>
                <section class="d-flex align-items-center justify-content-center">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="text-center mt-4 mb-3">
                        <img src="~/images/logos/logo-emus-azul(400 x 140 px).png" alt="Logo EMUS" />
                        </div>


                        <hr />
                        <h2 class="text-primary fw-bolder text-uppercase fs-5 text-center">Ingrese sus credenciales de acceso</h2>
                
                        <div class="form-floating mt-3 mb-3">
                        <input asp-for="Input.Email" class="form-control w-100 text-secondary" autocomplete="username" aria-required="true" placeholder="Correo electrónico" />
                            <label asp-for="Input.Email" class="form-label text-secondary w-100">Correo electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control w-100 text-secondary" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                            <label asp-for="Input.Password" class="form-label text-secondary w-100">Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

               
                    <div class="col-lg-12 col-sm-12 text-center">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Iniciar sesión</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
