        <div class="row pb-2">
            <h2 class="text-primary"> Crear especialidad</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <div class="p-2">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-area="Admin" asp-controller="Specialty" asp-action="Index" style="width:150px" class="btn btn-secondary">Regresar a lista de especialidades</a>

    </div>

</form>

