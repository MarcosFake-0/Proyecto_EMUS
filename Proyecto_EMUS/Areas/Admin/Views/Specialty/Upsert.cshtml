@using Proyecto_EMUS.Models

@model Specialty

<form method="post">

    <input hidden asp-for="Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Id == 0 ? "Crear" : "Editar") Especialidad</h2>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="p-0">Nombre especialidad</label>
        <input asp-for="Name" type="text" class="form-control" />
        <div class="p-2">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px; height:75px">Guardar</button>
    <a asp-area="Admin" asp-controller="Specialty" asp-action="Index" class="btn btn-primary" style=" width:150px; height:75px">Regresar a lista de especialidades</a>


</form>



