@model List<Treatment>

@* <partial name="_Notifications" /> *@

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de tratamientos de paciente
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Treatment" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Insertar nuevo tratamiento</a>
        </div>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr class="table-primary">
                <th>Nombre tratamiento</th>
                <th>Descripción tratamiento</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var thisTreatment in Model)
            {
                <tr class="table-info">
                    <td>@thisTreatment.Name</td>
                    <td>@thisTreatment.Description</td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Treatment" asp-action="Edit" asp-route-id="@thisTreatment.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <a asp-controller="Treatment" asp-action="Delete" asp-route-id="@thisTreatment.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
