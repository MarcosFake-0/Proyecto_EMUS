@using Proyecto_EMUS.Models

@model Treatment

<form method="post">

    <input hidden asp-for="Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Id == 0 ? "Crear" : "Editar") Tratamiento</h2>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="p-0">Nombre tratamiento</label>
        <input asp-for="Name" type="text" class="form-control" />

        <label asp-for="Description" class="p-0">Descripción tratamiento</label>
        <input asp-for="Description" type="text" class="form-control" />
        <div class="p-2">
            <span asp-validation-for="Name" class="text-danger"></span>

            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px; height:75px">Guardar</button>
    <a asp-area="Medicine" asp-controller="Treatment" asp-action="Index" class="btn btn-primary" style=" width:150px; height:75px">Regresar a lista de tratamientos</a>




</form>



