@model Conditions
<form method="post">
    <div>
        <div>
            <h2 class="text-info">Eliminar condicion</h2>
        </div>



        <div>
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" readonly type="text" class="form-control" />

        </div>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />

        </div>
        <div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width: 150px">Eliminar</button>
        <a asp-area="Medicine" asp-controller="Conditions" asp-action="Index" style="width: 150px" class="btn btn-secondary"> Regresar a lista de Condiciones </a>
    </div>

</form>