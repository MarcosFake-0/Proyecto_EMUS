@using Proyecto_EMUS.Models

@model Patient

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Id == null ? "Crear" : "Editar") Paciente</h2>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Id" class="p-0"></label>
        <input asp-for="Id" type="text" class="form-control" />

        <div class="p-2">
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="DayOfBirth" class="p-0"></label>
        <input asp-for="DayOfBirth" type="date" class="form-control" min="1900-01-01" max="2023-12-31"/>

        <div class="p-2">
            <span asp-validation-for="DayOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="p-0"></label>
        <input asp-for="FirstName" type="text" class="form-control" />

        <div class="p-2">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="p-0"></label>
        <input asp-for="LastName" type="text" class="form-control" />

        <div class="p-2">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="CivilStatus" class="p-0"></label>
        <select asp-for="CivilStatus" class="form-control">
            <option value="Soltero(a)">Soltero(a)</option>
            <option value="Casado(a)">Casado(a)</option>
            <option value="Divorciado(a)">Divorciado(a)</option>
            <option value="Viudo(a)">Viudo(a)</option>
            <option value="Separado(a)">Separado(a)</option>
            <option value="Unión libre">Unión libre</option>
        </select>
    </div>

    

    <button type="submit" class="btn btn-primary" style="width:150px; height:75px">Guardar</button>
    <a asp-area="Medicine" asp-controller="Patient" asp-action="Index" class="btn btn-primary" style=" width:150px; height:75px">Regresar a lista de pacientes</a>




</form>



