<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_EMUS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_EMUS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><img src="~/images/logos/logo-emus(400 x 140 px).png" class="w-50" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">
                                Inicio
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                       


                        @if (User.IsInRole(Proyecto_EMUS.Utilities.ProyectoEMUSRoles.Role_Admin))
                        {



                            <li class="nav-item dropdown">
                                <a class="nav-link active dropdown-toggle" data-bs-toggle="dropdown" href="/" role="button" aria-haspopup="true" aria-expanded="false">Administración</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-light" asp-area="Admin" asp-controller="Doctor" asp-action="Index">Doctor</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="Admin" asp-controller="Specialty" asp-action="Index">Especialidades</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Patient" asp-action="Index">Paciente</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link active dropdown-toggle" data-bs-toggle="dropdown" href="/" role="button" aria-haspopup="true" aria-expanded="false">Medicina</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Patient" asp-action="Index">Pacientes</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Conditions" asp-action="Index">Padecimientos</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Treatment" asp-action="Index">Tratamientos</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Medication" asp-action="Index">Medicamentos</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
                                </div>
                            </li>
                        }
                        else if (User.IsInRole(Proyecto_EMUS.Utilities.ProyectoEMUSRoles.Role_Doctor))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link active dropdown-toggle" data-bs-toggle="dropdown" href="/" role="button" aria-haspopup="true" aria-expanded="false">Medicina</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Patient" asp-action="Index">Pacientes</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Conditions" asp-action="Index">Padecimientos</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Treatment" asp-action="Index">Tratamientos</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Medication" asp-action="Index">Medicamentos</a>
                                </div>
                            </li>
                        }                        
                       
                    </ul>


                   

                    <partial name ="_loginPartial"></partial>
                </div>

            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Proyecto_EMUS - Ashley Torres Valverde C27826 - Marco Garbanzo Hernández C19048 - Jonathan Reyes Moncada C06456 - Gabriel Carranza Rodríguez C11668</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.0.7/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
